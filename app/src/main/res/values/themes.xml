<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CNHCare" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_solid_blue</item>
        <item name="colorPrimaryVariant">@color/tertiary_pastel_white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_marine_blue</item>
        <item name="colorSecondaryVariant">@color/secondary_light_sky_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
<!--        <item name="android:navigationBarColor">@android:color/transparent</item>-->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
<!--        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CNHCare.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CNHCare.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CNHCare.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.CNHCare.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_solid_blue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="android:windowSplashScreenBehavior" tools:targetApi="tiramisu">icon_preferred</item>
        <item name="postSplashScreenTheme">@style/Theme.CNHCare</item>
    </style>

    <style name="Theme.CNHCare.Translucent" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

</resources>